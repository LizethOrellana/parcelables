<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/fondo4">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:text="Iniciar Sesion"
            android:textColor="@color/purple_500"
            android:textSize="40dp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="150dp"
            app:srcCompat="@drawable/usuario" />

        <TextView
            android:id="@+id/titNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Nombre: "
            android:textColor="@color/purple_700"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:layout_alignBottom="@+id/imgUsuario"/>
        <TextView
            android:id="@+id/sololetras"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="*Solo Letras"
            android:textColor="@color/purple_500"
            android:layout_marginHorizontal="230dp"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/titNombre"/>

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/titNombre"
            android:textSize="25sp"
            android:hint="Escribir aqui"/>

        <TextView
            android:id="@+id/titContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Contraseña: "
            android:textColor="@color/purple_700"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:layout_below="@+id/txtUsuario"/>

        <TextView
            android:id="@+id/max"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/titContra"
            android:layout_marginHorizontal="230dp"
            android:text="*Minimo 5 caracteres"
            android:textColor="@color/purple_500"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titContra"
            android:layout_marginHorizontal="30dp"
            android:hint="Escribir aqui"
            android:inputType="textPassword"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/titVerContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/txtContra"
            android:text="Verificar contraseña: "
            android:fontFamily="sans-serif-black"
            android:textColor="@color/purple_700"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtVerContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Verifica Contraseña"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:layout_below="@+id/titVerContra"/>

        <Button
            android:id="@+id/bntIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            android:backgroundTint="@color/purple_200"
            android:text="Ingresar"
            android:layout_below="@+id/txtVerContra"/>

    </RelativeLayout>
</layout>